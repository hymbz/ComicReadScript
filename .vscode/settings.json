{
  "todo-tree.filtering.excludeGlobs": ["**/node_modules/*/**", "**/*.js"],
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "css.validate": false,

  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.oxc": "explicit",
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.oxc": "explicit",
      "source.fixAll.eslint": "explicit"
    }
  },
  "[css]": {
    "editor.codeActionsOnSave": { "source.fixAll.stylelint": "explicit" }
  },

  "eslint.rules.customizations": [
    { "rule": "style/*", "fixable": true, "severity": "warn" },
    { "rule": "perfectionist/*", "fixable": true, "severity": "warn" },
    { "rule": "import/*", "fixable": true, "severity": "warn" }
  ],

  "i18n-ally.localesPaths": ["locales"],
  // "i18n-ally.localesPaths": ["locales", "src/userscript/ehTagRules"],
  "i18n-ally.pathMatcher": "{locale}.{ext}",
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sortKeys": true,
  "i18n-ally.keysInUse": [
    "translation.status.colorizing",
    "translation.status.default",
    "translation.status.detection",
    "translation.status.downscaling",
    "translation.status.error-lang",
    "translation.status.error-translating",
    "translation.status.error-with-id",
    "translation.status.finished",
    "translation.status.inpainting",
    "translation.status.ocr",
    "translation.status.mask-generation",
    "translation.status.pending-pos",
    "translation.status.preparing",
    "translation.status.rendering",
    "translation.status.saved",
    "translation.status.skip-no-regions",
    "translation.status.skip-no-text",
    "translation.status.textline_merge",
    "translation.status.translating",
    "translation.status.upscaling",
    "translation.translator.baidu",
    "translation.translator.deepl",
    "translation.translator.google",
    "translation.translator.gpt3.5",
    "translation.translator.none",
    "translation.translator.offline",
    "translation.translator.original",
    "translation.translator.youdao",
    "touch_area.type.edge",
    "touch_area.type.l",
    "touch_area.type.left_right",
    "touch_area.type.up_down",
    "hotkeys.float_tag_list",
    "hotkeys.jump_to_end",
    "hotkeys.jump_to_home",
    "hotkeys.page_down",
    "hotkeys.page_up",
    "hotkeys.scroll_down",
    "hotkeys.scroll_left",
    "hotkeys.scroll_right",
    "hotkeys.scroll_up",
    "hotkeys.switch_auto_enlarge",
    "hotkeys.switch_dir",
    "hotkeys.switch_grid_mode",
    "hotkeys.switch_page_fill",
    "hotkeys.switch_scroll_mode",
    "hotkeys.switch_single_double_page_mode",
    "hotkeys.enter_read_mode",
    "site.add_feature.cross_site_link",
    "site.add_feature.auto_page_turn",
    "site.add_feature.auto_adjust_option",
    "site.add_feature.block_totally",
    "site.add_feature.colorize_tag",
    "site.add_feature.detect_ad",
    "site.add_feature.float_tag_list",
    "site.add_feature.load_original_image",
    "site.add_feature.open_link_new_page",
    "site.add_feature.quick_favorite",
    "site.add_feature.quick_rating",
    "site.add_feature.quick_tag_define",
    "site.add_feature.remember_current_site",
    "site.add_feature.tag_lint",
    "site.add_feature.expand_tag_list",
    "site.add_feature.add_hotkeys_actions",
    "description",
    "img_status.error",
    "img_status.loading",
    "img_status.wait"
  ]
}
